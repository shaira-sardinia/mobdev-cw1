<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- LEFT SECTION (FROM) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/skyblue"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/fromCurrencyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/pixel_font" />

        <TextView
            android:id="@+id/fromCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/fromAmountEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="48sp"
            android:textColor="@color/gray"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:minWidth="150dp" />

    </LinearLayout>

    <!-- MIDDLE SECTION -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/skyblue" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />

        </LinearLayout>

        <!-- Swap Button -->
        <ImageView
            android:id="@+id/convertButton"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/btn_convert"
            android:scaleType="fitCenter"
            android:rotation="90"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Convert"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

    <!-- RIGHT SECTION (TO) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/toCurrencyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/pixel_font" />

        <TextView
            android:id="@+id/toCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/lightgray"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/toAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textColor="@color/lightgray"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</LinearLayout>